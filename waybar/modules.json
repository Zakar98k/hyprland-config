{
  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": true,
    "all-outputs": false,
    "format": "{icon}",
    "format-icons": {
      "1": "I",
      "2": "II",
      "3": "III",
      "4": "IV",
      "5": "V",
      "6": "VI",
      "7": "VII",
      "8": "VIII",
      "9": "IX",
      "10": "X"
    }
    
  },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "format": "{:%I:%M %p}",
    "format-alt": "{:%a, %Y/%m/%d}",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "group/control": {
    "orientation": "horizontal",
    "modules": ["network", "backlight", "pulseaudio", "custom/screen-keyboard"]
  },
  "network": {
    "format-wifi": "{icon} {signalStrength}%",
    "format-ethernet": "󰈁",
    "format-disconnected": "󰖪",
    "tooltip-format": "{essid} ({signalStrength}%)",
    "on-click": "alacritty -e nmtui",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"]
  },
  "backlight": {
    "device": "eDP-1",
    "format": "{icon} {percent}%",
    "tooltip-format": "Brightness: {percent}",
    "format-icons": ["󰃚", "󰃛", "󰃜", "󰃞", "󰃟", "󰃝", "󰃠"]
    //"on-scroll-up": "~/.config/waybar/scripts/brightness.sh --inc",
    //"on-scroll-down": "~/.config/waybar/scripts/brightness.sh --dec"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟 ",
    "format-bluetooth": "󰗾",
    "format-icons": {
      "default": ["", "", "󰕾"]
    },
    "on-click": "pavucontrol &",
    "on-click-right": "pamixer -t",
    "scroll-step": 5
    //"on-scroll-up": "~/.config/waybar/scripts/volume.sh --inc",
    //"on-scroll-down": "~/.config/waybar/scripts/volume.sh --dec"
  },
  "custom/wlogout": {
    "format": "",
    "on-click": "wlogout",
    "tooltip": false
  },
  "custom/screen-keyboard": {
    "format": "󰌌",
    "on-click": "pkill -RTMIN wvkbd-mobintl",
    "tooltip": false
  }
  //"image": {
    //"path": "/home/zach/.config/waybar/avatar.png",
    //"size": 30,
    //"on-click": "swaync-client -t -sw"
  }
}
